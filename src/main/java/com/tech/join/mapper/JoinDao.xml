<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 컨트롤 시프트 x는 소문자를 대문자로 바꿔준다 -->

<mapper namespace="com.tech.join.dao.JoinDao">

	<select id="idUserCheck" resultType="Integer">
		SELECT COUNT(USER_ID) FROM USER_INFO WHERE USER_ID= #{param1}
	</select>
	
	<select id="idBusinessCheck" resultType="Integer">
		SELECT COUNT(BUSINESS_ID) FROM BUSINESS_INFO WHERE BUSINESS_ID= #{param1}
	</select>
	
	<select id="nicknameUserCheck" resultType="Integer">
		SELECT COUNT(USER_NICKNAME) FROM USER_INFO WHERE USER_NICKNAME= #{param1}
	</select>
	
	<select id="nicknameBusinessCheck" resultType="Integer">
		SELECT COUNT(BUSINESS_NICKNAME) FROM BUSINESS_INFO WHERE BUSINESS_NICKNAME= #{param1}
	</select>
	
	<insert id="sucessjoinuser">
		INSERT INTO USER_INFO VALUES (#{param1},#{param2},1,#{param4},#{param6},#{param5},#{param3},USER_NUM.NEXTVAL)
	</insert>
	
	<insert id="sucessjoinbusiness">
		INSERT INTO BUSINESS_INFO VALUES (#{param1},#{param2},1,#{param4},#{param6},#{param5},#{param3},#{param7},BUSINESS_NUM.NEXTVAL)
	</insert>
	
</mapper>
	